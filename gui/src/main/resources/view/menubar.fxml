<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox id="vbox" xmlns:fx="http://javafx.com/fxml"
	fx:controller="com.github.bbijelic.torrent.gui.main.controller.MenuBarController">

	<stylesheets>
		<URL value="@../css/menubar.css" />
	</stylesheets>

	<MenuBar fx:id="menuBar">
		<menus>
			<Menu text="Providers">
				<items>
					<MenuItem styleClass="episodes" text="Episode Providers" />
					<MenuItem styleClass="subtitles" text="Subtitle Providers" />
					<MenuItem styleClass="torrents" text="Torrent Providers" />
				</items>
			</Menu>
			<Menu text="About">
				<items>
					<MenuItem styleClass="help" text="Help" />
					<MenuItem styleClass="about" text="About" />
				</items>
			</Menu>
		</menus>
	</MenuBar>
</VBox>