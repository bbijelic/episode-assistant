<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>

<ContextMenu
	xmlns:fx="http://javafx.com/fxml/1" 
	fx:controller="com.github.bbijelic.torrent.gui.main.controller.MainController">
	<items>
		<MenuItem text="Download Episode..."  onAction="#downloadEpisode" />
		<MenuItem text="Stop Downloading..."  onAction="#stopDownloading" />
		<MenuItem text="Pause Downloading..." onAction="#pauseDownloading" />
		<SeparatorMenuItem />
		<MenuItem text="Remove Episode..."  onAction="#removeEpisode" />
	</items>
</ContextMenu>