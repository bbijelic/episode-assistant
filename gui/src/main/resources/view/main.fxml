<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.111"
	xmlns:fx="http://javafx.com/fxml/1" prefHeight="1000"
	fx:controller="com.github.bbijelic.torrent.gui.main.controller.MainController">

	<stylesheets>
		<URL value="@../css/tableview.css" />
	</stylesheets>

	<children>
		<VBox prefHeight="1000.0" prefWidth="100.0"
			AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<children>
				<Button id="loadEpisodesBtn" mnemonicParsing="false"
					onAction="#loadEpisodesAction" text="Load Episodes" />
				<TableView fx:id="episodesTable" prefHeight="1000">
					<columns>
						<TableColumn fx:id="showNameColumn" editable="false"
							prefWidth="150" styleClass="show-name-column" text="Show Name" />
						<TableColumn fx:id="episodeNameColumn" editable="false"
							prefWidth="200" styleClass="episode-name-column" text="Episode Name" />
						<TableColumn fx:id="seasonNumberColumn" editable="false"
							prefWidth = "60" styleClass="season-number-column" text="Season" />
						<TableColumn fx:id="episodeNumberColumn" editable="false"
							prefWidth = "60" styleClass="episode-number-column" text="Episode" />
						<TableColumn fx:id="releaseDateColumn" editable="false"
							prefWidth="100" styleClass="release-date-column" text="Release Date" />
						<TableColumn fx:id="statusColumn" editable="false"
							prefWidth="150" styleClass="status-column" text="Status" />
						<TableColumn fx:id="progressColumn" editable="false"
							prefWidth="300" styleClass="progress-column" text="Progress" />
					</columns>
					<columnResizePolicy>
						<TableView fx:constant="UNCONSTRAINED_RESIZE_POLICY" />
					</columnResizePolicy>
				</TableView>
			</children>
		</VBox>
	</children>
</AnchorPane>
